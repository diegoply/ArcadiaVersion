{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}

 <!--présentation habitat -->

<div class="container col-10 mt-5 mb-5">
    <div class="row  align-items-center">
      <div class="container col-12 col-md-6">
      <div class="container col-12 col-md-6 d-flex justify-content-center">
        <h1 class=" Title d-flex justify-content-center text-center  ">{{ habitat.nom }}</h1>
      </div>

      <div class="container col-12 col-md-6 d-flex justify-content-center mt-5">
        <p class=" Paragraphe1 d-flex justify-content-center  text-center">{{ habitat.description }}</p>
      </div>
    </div>
      <div class="col-12 col-md-6">
         <img src="{{ vich_uploader_asset(habitat.image, 'imageFile') }}" class="card-img-top img-fluid mt-3 habitatsBorder container col-10 imageHabitatsPage"  alt="{{habitat.nom}}">
      </div>
    
    </div>
  </div>
 <!--Fin presentation habitat -->

  <!--debut animaux dans habitat -->

  <div class=" row bois mt-5">
    
      <h1 class="Title d-flex justify-content-center mt-5 mb-5 text-center ">Voici les animaux présent dans l'habitat {{ habitat.nom }}</h1>
      {% for animal in habitat.animals %}
     <div class="container col-10">
        <div class="col-12">
          <h1 class="Paragraphe4 mt-4 mb-4 text-center">"{{ animal.prenom }}"</h1>
        </div>
        <div class=" row container col-10 mb-5">
          <div class="container col-6 d-flex justify-content-center">
            <img src="{{ vich_uploader_asset(animal.imageAnimal, 'imageFile') }}" alt="image {{ animal.race }}" width="350rem"   class="imageAnimalHabitats img-fluid d-flex justify-content-center">
          </div>
          <div class="row container col-6 d-flex justify-content-center text-center Paragraphe5 ">
            <h3 class="col-12 mb-3 align-middle justify-content-center text-center">Race: "{{ animal.race }}"</h3>
                <div class="col-12">
                  <a href="{{ path('app_Rapport', { 'id': animal.id } ) }}"  class="btn buttonConnect2">Voir état {{ animal.prenom }}</a>
                 </div>
          </div>
   
  </div>
       
      </div>
       {% endfor %}
    </div>
  </div>
      
{% endblock %}